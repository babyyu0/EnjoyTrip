<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ssafy.trip.model.dao.MemberSecDAO">
	<select id="findByMemberId" parameterType="Member" resultType="MemberSec">
		SELECT id, member_id AS memberId, salt, sec_key AS secKey FROM member_sec WHERE member_id=#{memberId}
	</select>

	<select id="login" parameterType="Member" resultType="MemberSecVO">
		SELECT * FROM memberSec WHERE id=#{id}
	</select>
 	
 	<insert id="registSec" parameterType="MemberSecVO">
 		INSERT INTO membersec VALUES (#{id}, #{salt}, #{secKey})
 	</insert>
</mapper>